@using PATENT.Views.Modals
@model ModalObjectData

<!-- add COMMENT Modal -->
<div class="modal fade" id="addCommentModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Adding new comment</h4>
            </div>

            @using (Ajax.BeginForm(Model.ControllerMethod, Model.Controller, new { id = Model.ID }, new AjaxOptions { HttpMethod = "Post" }))
            {
                <div class="modal-body">

                    <div class="form-group">
                        <div class="row">
                            <div class="pull-left col-sm-offset-1">
                                <label>Description:</label>
                            </div>
                            <div class="pull-right col-xs-6">
                                <textarea class="form-control" name="TextData" rows="3"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="pull-left col-sm-offset-1">
                                <label>Date:</label>
                            </div>
                            <div class="pull-right col-sm-6">
                                <div class='input-group date col-md-offset-1' id='datetimepicker5'>
                                    <input name="Date" class="form-control" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <script type="text/javascript">
                                $(function () {
                                    $('#datetimepicker5').datepicker();
                                });
                        </script>
                    </div>

                </div>

                <div class="modal-footer">
                    <input type="submit" class="btn btn-default pull-right" value="Create" />
                </div>
            }

        </div>
    </div>
</div>

